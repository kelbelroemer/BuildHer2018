{
	"manifest_version": 2,
	"name": "ReelRepresent",
	"description": "Add Bechdel Test rating to Netflix movie descriptions",
	"permissions": ["https://*.neflix.com/*"],
	"version": "0.1",

	"background": {
		"scripts": ["background.js"]
	},

	"page_action": {
		"default_popup": "popup.html",
		"default_icon": "BuildHerIcon.png",
		"default_title": "Bechdel Test"

	},

	"content_scripts": [
	{
		"matches": ["https://*.netflix.com/*"],
		"css": ["contentscript.css"],
		"js": ["jquery-3.3.1.min.js", "extension.js"]
		}
	],
	"permissions": [
		"https://www.netflix.com/*",
		"http://bechdeltest.com/*"

	]


}
